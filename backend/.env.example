# Backend Environment Variables
# Copy this to .env and fill in your Firebase credentials

# Firebase Admin SDK Credentials
FIREBASE_PROJECT_ID=your-project-id-here
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Alternative: Use JSON file path instead of individual variables
# FIREBASE_ADMIN_KEY_PATH=./firebase-admin-key.json

# Registration Security
ROOT_REGISTRATION_KEY=root_secure_registration_key_2025

# API Keys (existing)
API_KEY_OPERATOR=op_1234567890abcdef
API_KEY_ADMIN=adm_1234567890abcdef

# JWT Secret
JWT_SECRET=cns-lab-secret-key-change-in-production

# Server Configuration
PORT=3001
ARTIFACTS_PATH=/artifacts
AUDIT_LOG_PATH=./logs/audit.log
