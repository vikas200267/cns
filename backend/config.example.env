# Lab Control Backend Configuration
# Copy this file to .env and configure with your values

# Server
PORT=3001
NODE_ENV=production

# CORS (frontend URL)
CORS_ORIGIN=http://localhost:3000

# API Keys (CHANGE THESE!)
# Generate strong keys: openssl rand -hex 16
API_KEY_OPERATOR=op_1234567890abcdef
API_KEY_ADMIN=adm_fedcba0987654321

# Authentication
# JWT secret for token signing (CHANGE THIS!)
JWT_SECRET=cns-lab-secret-key-change-in-production

# Registration key required for user signup (CHANGE THIS!)
# Share this key with authorized users who need to register
ROOT_REGISTRATION_KEY=root_secure_registration_key_2025

# Paths
ARTIFACTS_PATH=/artifacts
AUDIT_LOG_PATH=./logs/audit.log

# Rate Limits (format: <max>/<window>)
# Windows: minute, hour
RATE_LIMIT_NMAP_SCAN=3/hour
RATE_LIMIT_NIKTO_SCAN=5/hour
RATE_LIMIT_START_CAPTURE=10/hour
RATE_LIMIT_STOP_CAPTURE=20/hour
RATE_LIMIT_LIST_CAPTURES=30/hour
RATE_LIMIT_ARP_SPOOF=1/hour
RATE_LIMIT_SYN_FLOOD=1/hour

# Docker
DOCKER_SOCKET=/var/run/docker.sock

# Logging
LOG_LEVEL=info